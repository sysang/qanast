{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": ["node", "jest"],
        "lib": [
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "DOM"
        ],
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "**/node_modules/**", "**/dist/**", "**/build/**"],
    "include": ["src/**/*", "__test__/**/*", "tests/**/*"],
    "ts-node": {
      "transpileOnly": true  
    }
}
